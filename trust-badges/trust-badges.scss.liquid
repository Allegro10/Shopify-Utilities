.trust-badges--container {
    border: solid 0.5px #ccccccde;
    padding: 1rem 1rem 0.5rem;
    margin-bottom: 2.25rem;
    margin-top: 2.25rem;
}
.trust-badges--container .trust-badges--title {
    font-size: 0.85rem;
    font-weight: bold;
    margin-top: -1.7rem;
    text-align: center;
    text-transform: uppercase;
}
.trust-badges--container .trust-badges--title span {
    background:#ffffff;
    padding: 0 1rem;
}
.trust-badges--container .trust-badges--images {
    list-style: none;
    margin: 0;
    padding: 0;
    text-align: center;
}
.trust-badges--container .trust-badges--images li {
    display: inline-block;
    margin: 0 3px;

}
.trust-badges--container .trust-badges--images li svg {
    width: 3rem;
    height: 2rem;
}